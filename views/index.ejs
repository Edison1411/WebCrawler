<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Hacker News Web Crawler</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <h1>Hacker News - Web Crawler</h1>

  <section class="table-section">
    <h2>Titles with more than 5 words</h2>
    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Title</th>
          <th>Score</th>
          <th>Comments</th>
          <th>Word Count</th>
        </tr>
      </thead>
      <tbody>
        <% if (longTitles && longTitles.length > 0) { %>
          <% longTitles.forEach(item => { %>
            <tr>
              <td><%= item.rank %></td>
              <td><%= item.title %></td>
              <td><%= item.points %></td>
              <td><%= item.comments %></td>
              <td><%= item.wordCount %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5">There are no articles with more than 5 words.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </section>

  <section class="table-section">
    <h2>Titles with 5 or less words</h2>
    <table>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Titles</th>
          <th>Score</th>
          <th>Comments</th>
          <th>Word Count</th>
        </tr>
      </thead>
      <tbody>
        <% if (shortTitles && shortTitles.length > 0) { %>
          <% shortTitles.forEach(item => { %>
            <tr>
              <td><%= item.rank %></td>
              <td><%= item.title %></td>
              <td><%= item.points %></td>
              <td><%= item.comments %></td>
              <td><%= item.wordCount %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5">No hay art√≠culos con 5 o menos palabras.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </section>
</body>
</html>
